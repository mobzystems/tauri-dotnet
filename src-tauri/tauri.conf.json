{
  "build": {
    "beforeDevCommand": "dotnet build && npm run dev",
    "beforeBuildCommand": "dotnet build /p:DeployOnBuild=true /p:PublishProfile=PublishProfile && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tauri-dotnet",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": false,
        "execute": true,
        "scope": [
          {
            "name": "services",
            "cmd": "./services/BackendService",
            "args": true,
            "sidecar": false
          }
        ]
      }
    },
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "com.example.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "services"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "tauri-dotnet",
        "width": 800,
        "height": 600
      }
    ]
  }
}
